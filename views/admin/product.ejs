    <script>
        // Attach event listeners to regular price field
        document.getElementById('regular_price').addEventListener('blur', function() {
            validateRegularPrice();
        });
    
        // Attach event listeners to discount price field
        document.getElementById('discount_price').addEventListener('blur', function() {
            validateDiscountPrice();
        });
    
        // Attach event listeners to stock count field
        document.getElementById('stock_count').addEventListener('blur', function() {
            if (stock_count ===0){
                
            }
            validateStockCount();
        });
    
        function validateRegularPrice() {
            var regularPrice = document.getElementById('regular_price').value.trim();
            if (regularPrice === '' || isNaN(regularPrice) || regularPrice < 0) {
                document.getElementById('priceError').textContent = 'Please enter a valid regular price';
                return false;
            } else {
                document.getElementById('priceError').textContent = '';
                return true;
            }
        }
    
        function validateDiscountPrice() {
            var discountPrice = document.getElementById('discount_price').value.trim();
            var regularPrice = document.getElementById('regular_price').value.trim();
            if (discountPrice === '' || isNaN(discountPrice) || discountPrice < 0 || parseFloat(discountPrice) >= parseFloat(regularPrice)) {
                document.getElementById('discountPriceError').textContent = 'Please enter a valid discount price (less than regular price)';
                return false;
            } else {
                document.getElementById('discountPriceError').textContent = '';
                return true;
            }
        }
    
        function validateStockCount() {
            var stockCount = document.getElementById('stock_count').value.trim();
            if (stockCount === '' || isNaN(stockCount) || stockCount < 0) {
                document.getElementById('stockError').textContent = 'Please enter a valid stock count';
                return false;
            } else {
                document.getElementById('stockError').textContent = '';
                return true;
            }
        }
    
        function validateForm() {
            // Reset error messages
            document.getElementById('nameError').textContent = '';
            document.getElementById('descriptionError').textContent = '';
            document.getElementById('categoryError').textContent = '';
            document.getElementById('imagesError').textContent = '';
            document.getElementById('mainError').textContent = '';
    
            // Validate product name
            var productName = document.getElementById('product_name').value.trim();
            if (productName === '') {
                document.getElementById('nameError').textContent = 'Please enter a product name';
                return false;
            }
    
            // Validate product description
            var productDescription = document.getElementById('product_description').value.trim();
            if (productDescription === '') {
                document.getElementById('descriptionError').textContent = 'Please enter a product description';
                return false;
            }
    
            // Validate category selection
            var categoryInputs = document.getElementsByName('category');
            var categorySelected = false;
            for (var i = 0; i < categoryInputs.length; i++) {
                if (categoryInputs[i].checked) {
                    categorySelected = true;
                    break;
                }
            }
            if (!categorySelected) {
                document.getElementById('categoryError').textContent = 'Please select a category';
                return false;
            }
    
            // Validate images selection
            var imagesInput = document.getElementById('product_images').files;
            if (imagesInput.length === 0) {
                document.getElementById('imagesError').textContent = 'Please select at least one image';
                return false;
            }
    
            // Validate regular price, discount price, and stock count
            if (!validateRegularPrice() || !validateDiscountPrice() || !validateStockCount()) {
                return false;
            }
    
            // If all validations pass, return true
            return true;
        }
    </script>
     
