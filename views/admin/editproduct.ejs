        </header>
        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit Product</h2>
                    </div>
                    <div id="mainError"></div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <!-- Form content -->
                            <form action="" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input type="text" class="form-control" name="name" id="product_name"
                                        value="<%= proData.name %>">
                                    <p id="nameError" class="text-danger"></p>
                                </div>
                                <div class="mb-4">
                                    <label for="product_description" class="form-label">Description</label>
                                    <input type="text" class="form-control" name="description" id="product_description" value="<%= proData.description %>"
                                        rows="4">
                                    <p id="descriptionError" class="text-danger"></p>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label for="regular_price" class="form-label">Price</label>
                                            <input type="text" class="form-control" name="price" id="regular_price"
                                                value="<%= proData.price %>">
                                            <p id="priceError" class="text-danger"></p>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label for="discount_price" class="form-label">Discount Price</label>
                                            <input placeholder="₹" type="text" class="form-control" name="discountPrice" id="discount_price">
                                            <p id="discountPriceError" class="text-danger"></p> <!-- Placeholder for discount price error -->
                                        </div>
                                    </div>
                                   
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label for="stock_count" class="form-label">Count of Stock</label>
                                            <input type="text" class="form-control" name="stock" id="stock_count"
                                                value="<%= proData.countInStock %>">
                                            <p id="stockError" class="text-danger"></p>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <% if(catData.length > 0) {
                                            for(let i=0; i<catData.length; i++) { %>
                                        <label class="mb-2 form-check form-check-inline" style="width: 45%;">
                                            <input class="form-check-input" value="<%=catData[i]._id%>" name="category" id="category_<%= i %>" type="radio">
                                            <span class="form-check-label"> <%=catData[i].name%> </span>
                                        </label>
                                        <%}}%>
                                        <div id="categoryError" class="text-danger"></div> <!-- Placeholder for category error -->
                                    </div>
                                    
                                </div>
                               
                               
                                    </div> 
                                    <!-- Existing Images -->
                                    <div class="mb-4">
                                    <label for="existing_images" class="form-label">Existing Images</label>
                                    <div id="existing_images_container">
                                        <% proData.images.forEach(image => { %>
                                            <div class="existing-image">
                                                <img src="/uploads/productImages/<%=image %>" alt="Existing Image">
                                                <a href="/admin/deleteImage?id=<%=proData._id%>&delete=<%=image %>">Delete</a>
                                                `
                                            </div>
                                        <% }) %>
                                    </div>
                                </div>
                                <!-- Media Section for Images -->
