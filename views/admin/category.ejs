function Funname(){
    let nameaValue=document.getElementById("product_name").value
    // alert(nameaValue)
    let nameErr=document.getElementById("nameError")


    if(nameaValue==""){
        nameErr.innerHTML="Name is require"
    }else if(nameaValue.length<3){
        nameErr.innerHTML="Name will be more than 3 letters"
    }else if(!/^[a-zA-Z\s]*$/.test(nameaValue)) {
        nameErr.innerHTML="Name will be alphabets"
    }else{
        nameErr.innerHTML=""
    }
}


document.getElementById("categoryForm").addEventListener("submit",(e)=>{
    let nameErr=document.getElementById("nameError").innerHTML

    if(nameErr){
        e.preventDefault()
    }
})

    

function activate(id) {
    // Show confirmation dialog before activating
    swal({
        title: "Are you sure?",
        text: "Once activated, this category will be visible to users.",
        icon: "warning",
        buttons: true,
        dangerMode: true,
    })
    .then((willActivate) => {
        if (willActivate) {
            fetch(`/admin/delete-cate?id=${id}`)
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                       
                        throw new Error('Failed to activate category');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
               
                });
        } else {
           
        }
    });
